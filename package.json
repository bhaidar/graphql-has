{
  "name": "typescript-express-graphql-seed",
  "version": "2.0.0",
  "description": "TypeScript + Express + Apollo Server + Apollo Engine + GraphQL",
  "private": true,
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "help": "node ./bin/wizard.js",
    "auto-env": "npm run build:prod && node build/compiled",
    "dev1": "npm run build:dev && cross-env NODE_TARGET_ENV=development NODE_ENV_ID=1 node build/compiled",
    "dev2": "npm run build:dev && cross-env NODE_TARGET_ENV=development NODE_ENV_ID=2 node build/compiled",
    "dev3": "npm run build:dev && cross-env NODE_TARGET_ENV=development NODE_ENV_ID=3 node build/compiled",
    "test1": "npm run build:stage && cross-env NODE_TARGET_ENV=stage NODE_ENV_ID=1 node build/compiled",
    "test2": "npm run build:stage && cross-env NODE_TARGET_ENV=stage NODE_ENV_ID=2 node build/compiled",
    "test3": "npm run build:stage && cross-env NODE_TARGET_ENV=stage NODE_ENV_ID=3 node build/compiled",
    "prod": "npm run build:prod && cross-env NODE_TARGET_ENV=production NODE_ENV_ID=1 node build/compiled",
    "check-vuln": "nsp check --filter 5",
    "lint": "tslint -c tslint.json 'server/**/*.{ts}'",
    "test": "npm run lint && jest",
    "prepare-graphql": "npm run gql2ts && npm run generate-graphql-schema && npm run generate-fragments",
    "docker:prune": "docker system prune -a",
    "docker:install": "docker-compose up",
    "docker:rebuild": "docker-compose up --build",
    "docker:build": "docker build --tag duc-dox-bff .",
    "docker:run": "docker run duc-dox-bff",
    "docs": "npm run docs:clean && npm run docs:generate",
    "docs:clean": "rimraf __documentation__",
    "docs:generate": "typedoc --options typedoc.json ./server",
    "build:dev": "npm run clean && node node_modules/webpack/bin/webpack.js --config config/webpack.config.js",
    "build:stage": "npm run clean && node node_modules/webpack/bin/webpack.js --config config/webpack.stage.config.js",
    "build:prod": "npm run clean && node node_modules/webpack/bin/webpack.js --config config/webpack.production.config.js",
    "clean": "rimraf build/*",
    "generate-fragments": "graphql-fragment-codegen < ./schema.graphql > ./graphql/static/fragments.js",
    "generate-graphql-schema": "get-graphql-schema http://localhost:3000/graphql > ./schema.graphql",
    "gql2ts": "rimraf ./server/interfaces && gql-gen --schema http://localhost:3000/graphql --template graphql-codegen-typescript-template --out ./server/interfaces/"
  },
  "main": "",
  "keywords": [
    "TypeScript",
    "Apollo Server",
    "Apollo Engine",
    "GraphQL",
    "BFF",
    "MicroService",
    "WebService"
  ],
  "author": "Marcello Barile <marcello.barile@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/core-js": "^2.5.0",
    "@types/debug": "^0.0.30",
    "@types/express": "^4.16.0",
    "@types/express-serve-static-core": "^4.16.0",
    "@types/graphql": "^0.13.4",
    "@types/mime": "^2.0.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.12",
    "@types/serve-static": "^1.13.2",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "nsp": "^3.2.1",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "apollo-server": "^2.0.5",
    "apollo-server-express": "^2.0.4",
    "app-root-path": "^2.1.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "get-graphql-schema": "^2.1.1",
    "graphql": "^14.0.0",
    "graphql-code-generator": "^0.11.0",
    "graphql-codegen-typescript-template": "^0.11.0",
    "graphql-fragment-codegen": "^1.5.0",
    "graphql-schema-tools": "^0.0.6",
    "graphql-tools": "^3.1.1",
    "inquirer": "^6.2.0",
    "lodash": "^4.17.10",
    "luxon": "^1.3.3",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "multer": "^1.3.1",
    "npm-check-updates": "^2.14.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.2"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=7.8.0",
    "npm": ">=4.2.0"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/build/",
      "<rootDir>/config/",
      "<rootDir>/graphql/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(tsx?|jsx?)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/(.*)\\.(test|spec))\\.tsx?$"
  }
}
