{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "esnext",
      "es2018",
    ],
    "target": "es2018",
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "build"
  },
  "exclude": [
    "./node_modules",
    "./build",
    "./config",
    "./release",
    "./__tests__",
    "./**/__mocks__/*.ts",
    "./**/*.spec.ts"
  ]
}
